<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderStyle30">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/gilroy_semi_bold</item>
        <item name="android:textColor">@color/black_font</item>
    </style>

    <style name="SpanStyle">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/black_span</item>
    </style>

    <style name="InputStyle">
        <item name="android:backgroundTint">@color/black_span</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/black_font</item>
    </style>

    <style name="BlackText">
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">@color/black_font</item>
    </style>

    <style name="GreenButton">
        <item name="android:background">@drawable/button_border</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="fontFamily">@font/gilroy_semi_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchStyle">
        <item name="android:background">@drawable/search_box</item>
        <item name="fontFamily">@font/gilroy_semi_bold</item>
        <item name="android:textColor">@color/black_span</item>
        <item name="android:height">50dp</item>
    </style>
</resources>